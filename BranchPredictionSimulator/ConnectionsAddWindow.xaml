<Window x:Class="BranchPredictionSimulator.ConnectionsAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:BranchPredictionSimulator.Localization"
        Title="{l:Text TCP_AddTCPConnection}"
        Icon="icon.ico"
        Height="65" Width="328"
        MinHeight="65" MaxHeight="65" MinWidth="300"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="tb_host" Margin="2"/>
        <TextBox x:Name="tb_port" Grid.Column="1" Margin="2"/>
        <Button x:Name="btn_Add" Grid.Column="2" Margin="2" Click="btn_Add_Click" Padding="5, 0"
                Content="{l:Text TCP_Add}"/>
    </Grid>
</Window>
